{% extends "pizzaSiteBundle::base.html.twig" %}

{% block title %}Pizza{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Pizzas
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path ('index') }}">Home</a>
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="records_list" >
                <thead class="title" table border="1" cellpadding="10">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Size</th>
                    </tr>  
                </thead>
        
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td class="name">{{ entity.name }}</td>
                            <td class="description">{{ entity.description }}</td>
                            <td class="description">{{ entity.description }}</td>
                            <td class="select">
                                <select>
                                    <option value="small">Small</option>
                                    <option value="medium">Medium</option>
                                    <option value="large">Large</option>
                                </select>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('pizza_new') }}">
                        Create a new entry
                    </a>
                </li>
            </ul>
        </div>
    </div>   
{% endblock %}
