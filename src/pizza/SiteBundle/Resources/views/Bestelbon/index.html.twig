{% extends "pizzaSiteBundle::base.html.twig" %}

{% block title %}Customer{% endblock %}

{% block content %}
    <h1>Bestelbon list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Aantal</th>
                <th>Itempizza</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bestelbon_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.aantal }}</td>
                <td>{{ entity.itempizza }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bestelbon_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bestelbon_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bestelbon_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
